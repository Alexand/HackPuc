<%= content_for :title, 'Relatórios' %>

<div class="row">

  <!-- Line Chart - Single Series -->
  <div class="col-xs-6">
    <h3>Conversão de Chamadas</h3>
    <%= pie_chart Chamada.group(:status).count %>
  </div>

	<div class="col-xs-6">
    <h3>Reclamações por Linha</h3>
    <%= column_chart Contato.group(:linha).count %>
  </div>

  <div class="col-xs-6">
    <h3>Reclamações por Linha</h3>
    <%= line_chart Chamada.group_by_hour_of_day(:created_at).count %>
  </div>
</div>