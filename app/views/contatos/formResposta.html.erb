<%= content_for :title, 'Contato com Cliente' %>
<%= form_tag(contactResponse_path, method: "post") do %>
	<div class="field">
		<%= label_tag(:user) %>
		<%= text_field_tag :user , value=@user, disabled: :true %>
	</div>
	<div class="field">
	<%= label_tag(:message) %>
	</div>
	<div class="field">
	  
	  <%= text_area_tag(:message, '',size: "120x30") %>
  </div>
  <div class="actions">
  <%= submit_tag("Enviar Email") %>
  </div>
<% end %>