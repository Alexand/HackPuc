<% content_for :title, 'Lista de Paradas' %>

<table>
  <thead>
    <tr>
      <th>Linha</th>
      <th>Descricao</th>
      <th>Sequência</th>
      <th>Agência</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Endereço</th>
      <th>Bairro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paradas.each do |parada| %>
      <tr>
        <td><%= parada.linha %></td>
        <td><%= parada.descricao %></td>
        <td><%= parada.sequencia %></td>
        <td><strong><%= parada.agencia %></strong></td>
        <td><%= parada.latitude %></td>
        <td><%= parada.longitude %></td>
        <td><%= parada.endereco %></td>
        <td><%= parada.bairro %></td>
        <td><%= link_to 'Show', parada %></td>
        <td><%= link_to 'Edit', edit_parada_path(parada) %></td>
        <td><%= link_to 'Destroy', parada, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Nova Parada', new_parada_path %>

<h2>Importar Paradas</h2>
<%= form_tag import_paradas_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar" %>
<% end %>
